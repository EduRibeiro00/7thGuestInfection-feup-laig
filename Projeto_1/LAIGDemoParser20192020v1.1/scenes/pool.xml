<lxs>
    <scene root="root" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>

        <ortho id="preOrtho" near="0.1" far="500" left="10" right="10" top="10" bottom="10" >
            <from x="30" y="15" z="0" />
            <to x="0" y="-2" z="0" />
            <!-- <up x="0" y="1" z="0" /> -->
        </ortho>

    </views>

    <globals>
        <ambient r="0.4" g="0.4" b="0.4" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="0">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1.0" linear="0.0" quadratic="0.0" />
        </omni>

        <spot id="demoSpot" enabled="1" angle="10" exponent="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <target x="0" y="0" z="0" />
            <ambient r="0.4" g="0.4" b="0.4" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1.0" linear="0" quadratic="0" />
        </spot>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
        <texture id="otherTexture" file="scenes/images/rocks.jpg" />
        <texture id="rainbowTexture" file="scenes/images/rainbow-fade.jpg" />
    </textures>

    <materials>
        <material id="whiteMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.8" g="0.8" b="0.8" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
        </material>
        <material id="parasolRedMat" shininess="10">
            <emission r="0.4" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.1" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.3" g="0.1" b="0.0" a="1.0" />
            <specular r="0.3" g="0.1" b="0.0" a="1.0" />
        </material>
        <material id="parasolBlueMat" shininess="10">
            <emission r="0.0" g="0.0" b="0.4" a="1.0" />
            <ambient r="0.1" g="0.1" b="0.5" a="1.0" />
            <diffuse r="0.1" g="0.1" b="1.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="parasolStick">
            <cylinder base="0.05" top="0.05" height="2" slices="30" stacks="5" />
        </primitive>
        
        <primitive id="parasolTop">
            <cylinder base="2" top="0.0" height="0.8" slices="8" stacks="5" />
        </primitive>

    </primitives>

    <components>
        <component id="root">
            <transformation>
                <rotate axis="x" angle="-90" />  
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" length_s="3" length_t="3" />
            <children>
                <componentref id="parasolBottomNode" />
            </children>
        </component>

        <component id="parasolBottomNode">
            <transformation>
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
            <texture id="none" length_s="3" length_t="3" />
            <children>
                <componentref id="parasolTopNode" />
                <primitiveref id="parasolStick" />
            </children>
        </component>

        <component id="parasolTopNode">
            <transformation>
                <translate x="0" y="0" z="1.5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="parasolRedMatNode" />
            </children>
        </component>

        <component id="parasolRedMatNode">
            <transformation>
            </transformation>
            <materials>
                <material id="parasolRedMat" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <primitiveref id="parasolTop" />
            </children>
        </component>
    </components>
</lxs>