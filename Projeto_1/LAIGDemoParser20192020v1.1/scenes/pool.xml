<lxs>
    <scene root="root" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="20" z="35" />
            <to x="0" y="-2" z="0" />
        </perspective>

        <ortho id="preOrtho" near="0.1" far="500" left="10" right="10" top="10" bottom="10" >
            <from x="30" y="20" z="35" />
            <to x="0" y="-2" z="0" />
            <!-- <up x="0" y="1" z="0" /> -->
        </ortho>
    </views>

    <globals>
        <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
        <background r="0.4" g="0.75" b="0.9" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1.0" linear="0.0" quadratic="0.0" />
        </omni>
        
        <spot id="demoSpot" enabled="1" angle="10" exponent="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <target x="0" y="0" z="0" />
            <ambient r="0.4" g="0.4" b="0.4" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1.0" linear="0" quadratic="0" />
        </spot>
    </lights>

    <textures>
        <texture id="parasolMetalTex" file="scenes/images/metalTex.jpg" />
        <texture id="mainPlaneTex" file="scenes/images/mainPlaneTex.jpg" />
        <texture id="waterTex" file="scenes/images/poolWater.jpg" />
        <texture id="floaterTex" file="scenes/images/rainbow-hard.jpg" />
        <texture id="beachBallTex1" file="scenes/images/beachBallTex1.png" />
        <texture id="beachBallTex2" file="scenes/images/beachBallTex2.jpg" />
    </textures>

    <materials>
        <material id="whiteMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.8" g="0.8" b="0.8" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
        </material>
        <material id="parasolRedMat" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.2" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.5" g="0.1" b="0.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="parasolBlueMat" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.1" g="0.1" b="0.5" a="1.0" />
            <diffuse r="0.1" g="0.1" b="0.7" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="waterMat" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.3" g="0.5" b="0.9" a="1.0" />
            <diffuse r="0.1" g="0.3" b="0.3" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" /> 
        </material>
        <material id="poolsideMat" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.35" g="0.3" b="0.25" a="1.0" />
            <diffuse r="0.7" g="0.6" b="0.5" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" /> 
        </material>
    </materials>

    <transformations>
        <transformation id="poolSideTransf">
            <scale x="1.88" y="0.94" z="1" />
            <rotate axis="z" angle="45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="mainPlane">
            <rectangle x1="-20" y1="-20" x2="20" y2="20" />
        </primitive>

        <primitive id="parasolStick">
            <cylinder base="0.05" top="0.05" height="2.5" slices="30" stacks="5" />
        </primitive>
        
        <primitive id="parasolTop">
            <cylinder base="2" top="0.0" height="0.8" slices="8" stacks="5" />
        </primitive>

        <primitive id="parasolBase">
            <rectangle x1="-0.7" y1="-0.7" x2="0.7" y2="0.7" />
        </primitive>

        <primitive id="poolSide">
            <torus inner="1" outer="8" slices="3" loops="4" />
        </primitive>
        
        <primitive id="poolWaterRectangle">
            <rectangle x1="-10" y1="-5" x2="10" y2="5" />            
        </primitive>

        <primitive id="poolFloater">
            <torus inner="0.6" outer="1.6" slices="15" loops="15" />
        </primitive>

        <primitive id="beachBall">
            <sphere radius="0.3" slices="20" stacks="20" />
        </primitive>

    </primitives>

    <components>
        <component id="root">
            <transformation>
                <rotate axis="x" angle="-90" />  
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="parasolGroupNode1" />
                <componentref id="parasolGroupNode2" />
                <componentref id="mainPlaneNode" />
                <componentref id="poolNode" />
                <componentref id="beachBallNode1" />
                <componentref id="beachBallNode2" />
            </children>
        </component>

        <component id="beachBallNode1">
            <transformation>
                <translate x="-13" y="5" z="0.4" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="beachBallTex1" length_s="1" length_t="1" />
            <children>
                <primitiveref id="beachBall" />
            </children>
        </component>

        <component id="beachBallNode2">
            <transformation>
                <translate x="-1" y="14" z="0.4" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="beachBallTex2" length_s="1" length_t="1" />
            <children>
                <primitiveref id="beachBall" />
            </children>
        </component>

        <component id="mainPlaneNode">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="mainPlaneTex" length_s="1" length_t="1" />
            <children>
                <primitiveref id="mainPlane" />
            </children>
        </component>


        <component id="parasolNode">
            <transformation>
                <translate x="0" y="0" z="0.05" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1" />
            <children>
                <componentref id="parasolTopNode" />
                <componentref id="parasolStickNode" />
                <componentref id="parasolBaseNode" />
            </children>
        </component>

        <component id="parasolStickNode">
            <transformation>
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <primitiveref id="parasolStick" />
            </children>
        </component>

        <component id="parasolBaseNode">
            <transformation>
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
            <texture id="parasolMetalTex" length_s="1" length_t="1" />
            <children>
                <primitiveref id="parasolBase" />
            </children>
        </component>

        <component id="parasolTopNode">
            <transformation>
                <translate x="0" y="0" z="1.7" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1" />
            <children>
                <primitiveref id="parasolTop" />
            </children>
        </component>

        <component id="parasolRed1">
            <transformation>
                <translate x="6.75" y="0" z="0" />
            </transformation>
            <materials>
                <material id="parasolRedMat" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="parasolNode" />
            </children>
        </component>

        <component id="parasolRed2">
            <transformation>
                <translate x="-2.25" y="0" z="0" />
            </transformation>
            <materials>
                <material id="parasolRedMat" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="parasolNode" />
            </children>
        </component>

        <component id="parasolBlue1">
            <transformation>
                <translate x="2.25" y="0" z="0" />
            </transformation>
            <materials>
                <material id="parasolBlueMat" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="parasolNode" />
            </children>
        </component>

        <component id="parasolBlue2">
            <transformation>
                <translate x="-6.75" y="0" z="0" />
            </transformation>
            <materials>
                <material id="parasolBlueMat" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="parasolNode" />
            </children>
        </component>

        <component id="parasolGroupNode1">
            <transformation>
                <translate x="4" y="15" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="parasolRed1" />
                <componentref id="parasolRed2" />
                <componentref id="parasolBlue1" />
                <componentref id="parasolBlue2" />
            </children>
        </component>

        <component id="parasolGroupNode2">
            <transformation>
                <translate x="-14" y="0" z="0" />
                <rotate axis="z" angle="90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="parasolRed1" />
                <componentref id="parasolRed2" />
                <componentref id="parasolBlue1" />
                <componentref id="parasolBlue2" />
            </children>
        </component>

        <component id="poolWaterNode">
            <transformation>
            </transformation>
            <materials>
                <material id="waterMat" />
            </materials>
            <texture id="waterTex" length_s="1" length_t="1" />
            <children>
                <primitiveref id="poolWaterRectangle" />
            </children>
        </component>

        <component id="poolSideNode">
            <transformation>
                <transformationref id="poolSideTransf" />
            </transformation>
            <materials>
                <material id="poolsideMat" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <primitiveref id="poolSide" />
            </children>
        </component>

        <component id="poolBuoyant">
            <transformation>
                <translate x="2.5" y="2" z="0.0" />
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
            <texture id="floaterTex" length_s="1" length_t="1" />
            <children>
                <primitiveref id="poolFloater" />
            </children>
        </component>

        <component id="poolNode">
            <transformation>
                <translate x="5" y="5" z="0.01" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="poolWaterNode" />
                <componentref id="poolSideNode" />
                <componentref id="poolBuoyant" />
            </children>
        </component>

    </components>
</lxs>